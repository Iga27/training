@model IEnumerable<App.WEB.Models.GuestBookMessageViewModel>




<h3>Все записи</h3>
@foreach (var item in Model)
{
    <div class="row">
        <div col-lg-6 col-md-6>
            <div class="panel panel-info">
                <div class="panel-body">
                    
                    <p style="word-break: break-all;">@item.Message</p>
                         
                    </div>

                <div class="panel-footer">
                    <p>Пользователь <b>@item.GuestName</b> оставил комментарий. Время: @item.WhenAdded</p>
                </div>
            </div>
        </div>
     </div>

}

 
