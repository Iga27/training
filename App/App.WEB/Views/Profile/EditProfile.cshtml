@using Microsoft.AspNet.Identity
@model App.WEB.Models.UserProfileViewModel
@{
    ViewBag.Title = "EditProfile";
}

<style>
    .form-area {
        background-color: #FAFAFA;
        padding: 10px 40px 60px;
        margin: 10px 0px 60px;
        border: 1px solid GREY;
    }
</style>

<h2>Редактирование профиля</h2>

@using (Html.BeginForm("EditProfile", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
   /// @Html.HiddenFor(m => m.Id)




    <p></p>
    <p></p>



    <div class="container">
        <div class="col-md-5">
            <div class="form-area">
                <div class="editor-label">
                    <p>Информация о себе: </p>
                </div>

                <div class="editor-field">
                    <h3>Фотография вашего профиля</h3>
                    <input type="file" id="file" name="file" />
                </div>

                <div class="editor-field">
                    <h3>Ваше имя</h3>
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </div>

                <div class="editor-field">
                    <h3>Ваш возраст</h3>
                    @Html.EditorFor(model => model.Age)
                    @Html.ValidationMessageFor(model => model.Age)
                </div>

                <div class="editor-field">
                    <h3>Телефон</h3>
                    @Html.EditorFor(model => model.PhoneNumber)
                    @Html.ValidationMessageFor(model => model.PhoneNumber)
                </div>

                <div class="editor-field form-group">
                    <h3>О себе</h3>
                    @Html.TextAreaFor(m => m.Info,5, 50, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Info)
                </div>
                <p></p>
                <div class="editor-label">
                    <p>Виды выполняемых работ: </p>
                </div>
                <div class="editor-field form-group">
                    @Html.TextAreaFor(m => m.CategoriesOfWork, 5, 50, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoriesOfWork)
                </div>

                <button type="submit" id="submit" name="submit" class="btn btn-default">Сохранить</button>

                </div>
            </div>
        </div>
            
}
    
@section Scripts
{
     @Scripts.Render("~/bundles/jqueryval")
}

